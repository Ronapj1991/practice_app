<h1>New Author</h1>

<%= form_with model: @author do |form| %>
    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
        
        <% @author.errors.full_messages_for(:name) do |message| %>
          <div><%= message %></div>
        <% end %>
    </div>
    
    <div>
        <%= form.submit %>
    </div>
<% end %>